<main>
    <div class="container">
        <div class="container my-5 py-5">


            <!--Section: Content-->
            <section class="text-center">


                <!--Grid row-->
                <div class="row">
                    <% prods.forEach(product => { %>
                    <!--Grid column-->
                    <div class="col-lg-4 col-md-6 mb-4">

                        <a href="" class="waves-effect waves-light">
                            <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/13.jpg"
                                class="img-fluid" alt="">
                        </a>

                        <p class="mb-1">
                            <a href="" class="font-weight-bold black-text">
                                <%= product.title %>
                            </a>
                        </p>

                        <p class="mb-1">
                            <small class="mr-1">
                                <s>$599</s>
                            </small>
                            <strong>$299</strong>
                        </p>

                        <span class="badge blue darken-1 mb-2">New</span>

                        <div class="amber-text fa-xs mb-1">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>

                        <button type="button" class="btn btn-black btn-rounded btn-sm px-3">Buy Now</button>
                        <button type="button"
                            class="btn btn-outline-black btn-rounded btn-sm px-3 waves-effect">Details</button>

                    </div>
                    <!--Grid column-->

                    <% }); %>

                </div>
                <!--Grid row-->


            </section>
            <!--Section: Content-->


        </div>
    </div>
</main>